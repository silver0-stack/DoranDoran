<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    android:outlineSpotShadowColor="#FA9183"
    android:outlineAmbientShadowColor="#FA9183"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/day_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="엄마 생일파티"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_schedule"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/day_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="17:00 PM" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_schedule"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/day_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="레스토랑" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33C4C4C4"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <ImageView
            android:id="@+id/day_image1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/emoji_father"/>
        <ImageView
            android:id="@+id/day_image2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/emoji_mother"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/day_image3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/emoji_son_3"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</LinearLayout>



</androidx.cardview.widget.CardView>